{
    "env": {
        "browser": true,
        "commonjs": true,
        "jasmine": true,
        "es6": true,
        "node": true
    },
    "extends": "eslint:recommended",
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaVersion": 2018
    },
    "rules": {
        "camelcase": "error",
        "key-spacing": "error",
        "keyword-spacing": [
            "error",
            {
                "after": false,
                "before": true
            }
        ],
        "semi-spacing": [
            "error",
            {
                "after": true,
                "before": false
            }
        ],
        "space-before-function-paren": "error",
        "space-in-parens": [
            "error",
            "always"
        ],
        "comma-dangle": 2,
        "quotes": 0,
        "no-empty-function": 1,
        "comma-spacing": 1,
        "no-eval": 1,
        "no-console": 1
    }
}